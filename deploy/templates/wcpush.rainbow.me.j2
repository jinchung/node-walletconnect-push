server {
    if ($host = {{ proxy_domain }}) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


	listen 80;
	listen [::]:80;
	server_name {{ proxy_domain }};
	return 301 https://{{ proxy_domain }}$request_uri;
}

server {
	listen 443 ssl http2;
	listen [::]:443 ssl http2;
	server_name {{ proxy_domain }};
	access_log off;
  ssl_certificate /etc/letsencrypt/live/{{ proxy_domain }}/fullchain.pem; # managed by Certbot
  ssl_certificate_key /etc/letsencrypt/live/{{ proxy_domain }}/privkey.pem; # managed by Certbot
	ssl_session_cache shared:SSL:200m;
	ssl_session_timeout 180m;
	ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
	ssl_prefer_server_ciphers on;
	ssl_ciphers ECDH+AESGCM:ECDH+AES256:ECDH+AES128:!DH+3DES:!ADH:!AECDH:!MD5;
	ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;
	ssl_stapling on;
	ssl_stapling_verify on;
	ssl_trusted_certificate /etc/letsencrypt/live/{{ proxy_domain }}/chain.pem;
	resolver 8.8.8.8 8.8.4.4;

	root /var/www/html;

	# Add index.php to the list if you are using PHP
	index index.html index.htm index.nginx-debian.html;

	server_name _;

	location / {
		if ($request_method ~* "(GET|POST)") {
			add_header "Access-Control-Allow-Origin"  *;
		}

		if ($request_method = OPTIONS) {
			add_header "Access-Control-Allow-Origin"  *;
			add_header "Access-Control-Allow-Methods" "GET, POST, OPTIONS, HEAD";
			add_header "Access-Control-Allow-Headers" "Authorization, Origin, X-Requested-With, Content-Type, Accept";
			return 200;
		}

		proxy_pass http://127.0.0.1:8080;
		proxy_set_header Host $http_host;
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_set_header X-Real_IP $remote_addr;
	}

}
