[Unit]
Description=WalletConnect Push daemon

[Service]
Type=simple
User=walletconnect
Group=walletconnect
ExecStart=/usr/bin/node-walletconnect-push
ExecStop=/bin/kill `/bin/ps aux | /bin/grep 'node-walletconnect-push' | /bin/grep -v grep | /usr/bin/awk '{ print $2 }'`
Restart=always
RestartSec=1

[Install]
WantedBy=multi-user.target
